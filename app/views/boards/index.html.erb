<h1>Boards</h1>
<div id = "columns">
  <% @boards.each do |board| %>
    <%= link_to board do %>
      <div class = "item-background">
        <div class = "item-info">
          <div class = "item-title"><b><%= link_to board.name, board %></b><br> 
          </div>
          <%= board.about rescue "N/A" %><br>
          <%= link_to board.user.full_name, board %>
        </div>
        <div id = "item-links">
          <a href = "/boards"> <img alt = "star" src = "http://csauth.ccny.cuny.edu/facultystaff/hr/images/star_1.jpg" class = "resize"></a>
          <%= link_to 'Edit', edit_board_path(board) %>
          <%= link_to 'Delete', board, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div> 
    <% end %>
  <% end %>
</div>
