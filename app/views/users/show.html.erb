<p id="notice"><%= notice %></p>
<p>
  <b><%= @user.full_name %></b>
  <br>
</p>
<p>
  <%= @user.email %>
</p>
<div id="userboards">
<strong><%= @user.first_name %>'s Boards:</strong>
	<% @boards.each do |x| %>
		<br>
		<%=x.name %>
	<% end %>
</div>
<br>
<div id="userpins">
	<% @user.pins.each do |x| %>
		<br>
		<%= link_to image_tag(x.image_url, :width => "20%"), x %> 
		<br>
		<%= link_to x.name, x %>
	<% end %>
</div>

<p>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
</p>